<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="reza.sabbagh.buildingmanagment.RegistrationUnitInformationActivity">

        <com.andexert.library.RippleView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/RegisterUnitActivity_RippleView1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            app:rv_rippleDuration="200"
            rv_centered="true">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/RegisterUnitActivity_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/file_edit96"
                app:civ_border_width="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"/>
        </com.andexert.library.RippleView>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_NumberOfUnit"
            android:hint="شماره واحد"
            android:inputType="number"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/RegisterUnitActivity_RippleView1"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_NumberBuilding"
            android:hint="شماره ساختمان"
            android:inputType="number"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_NumberOfUnit"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_Ownername"
            android:hint="نام مالک"
            android:inputType="text"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_NumberBuilding"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_nameResident"
            android:hint="نام ساکن"
            android:inputType="text"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_Ownername"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_Floor"
            android:hint="طبقه"
            android:inputType="number"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_nameResident"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_area"
            android:hint="مساحت"
            android:inputType="number"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_Floor"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_Dateliving"
            android:hint="تاریخ شروع سکونت"
            android:inputType="date"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_area"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_Numberofpersons"
            android:hint="تعداد افراد"
            android:inputType="number"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_Dateliving"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/RegisterUnitActivity_Text_Postalcode"
            android:hint="کدپستی"
            android:inputType="number"
            app:met_floatingLabel="normal"
            android:textSize="20dp"
            app:met_floatingLabelTextSize="18dp"
            android:gravity="right"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_textColorHint="#a3a1ab"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_Numberofpersons"/>

        <com.andexert.library.RippleView
            android:layout_width="196dp"
            android:layout_height="56dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/RegisterUnitActivity_Text_Postalcode"
            app:rv_rippleDuration="200"
            rv_centered="true"
            android:layout_centerHorizontal="true">

            <com.dd.CircularProgressButton
                android:hint="ذخیره"
                android:id="@+id/RegisterUnitActivity_Button_Register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                app:cpb_cornerRadius="48dp"
                android:background="#1E88E5"
                app:cpb_colorProgress="#093085"
                android:layout_centerHorizontal="true"
                />
        </com.andexert.library.RippleView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>



