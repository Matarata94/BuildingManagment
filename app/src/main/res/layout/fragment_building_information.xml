<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/BuildingInfoFrag_shimtv_numberBuilding"
            android:text="شماره ساختمان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textColor="#444"
            android:textSize="20sp"
            app:reflectionColor="#9000ff"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/BuildingInfoFrag_shimtv_Text_numberBuilding"
            android:hint="---"
            android:inputType="number"
            app:met_floatingLabel="none"
            android:gravity="left"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_hideUnderline="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:maxLength="4"
            android:layout_alignParentLeft="true"
            />

        <View
            android:id="@+id/BuildingInfoFrag_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/BuildingInfoFrag_shimtv_numberBuilding"
            android:background="#bdbdbd"
            android:layout_marginTop="15dp"
            >

        </View>

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/BuildingInfoFrag_shimtv_typeBuilding"
            android:text="نوع ساختمان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            app:reflectionColor="#ff0022"
            android:layout_below="@id/BuildingInfoFrag_view1"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/BuildingInfoFrag_shimtv_Text_typeBuilding"
            android:hint="---"
            android:inputType="text"
            app:met_floatingLabel="none"
            android:gravity="left"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_hideUnderline="true"
            app:met_underlineColor="#ddffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/BuildingInfoFrag_view1"
            android:layout_alignParentLeft="true"
            />


        <View
            android:id="@+id/BuildingInfoFrag_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/BuildingInfoFrag_shimtv_typeBuilding"
            android:background="#bdbdbd"
            android:layout_marginTop="15dp"
            >

        </View>

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/BuildingInfoFrag_shimtv_nameBuilding"
            android:text="نام ساختمان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            app:reflectionColor="#ffc800"
            android:layout_below="@id/BuildingInfoFrag_view2"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/BuildingInfoFrag_shimtv_Text_nameBuilding"
            android:hint="---"
            android:inputType="text"
            app:met_floatingLabel="none"
            android:gravity="left"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_hideUnderline="true"
            app:met_underlineColor="#ddffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/BuildingInfoFrag_view2"
            android:layout_alignParentLeft="true"
            />


        <View
            android:id="@+id/BuildingInfoFrag_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/BuildingInfoFrag_shimtv_nameBuilding"
            android:background="#bdbdbd"
            android:layout_marginTop="15dp"
            >
        </View>

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/BuildingInfoFrag_shimtv_numberOfUnit"
            android:text="تعداد واحدها"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            app:reflectionColor="#7bff00"
            android:layout_below="@id/BuildingInfoFrag_view3"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/BuildingInfoFrag_shimtv_Text_numberOfUnit"
            android:hint="---"
            android:inputType="number"
            app:met_floatingLabel="none"
            android:gravity="left"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_hideUnderline="true"
            app:met_underlineColor="#ddffffff"
            android:layout_marginLeft="5dp"
            android:maxLength="3"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/BuildingInfoFrag_view3"
            android:layout_alignParentLeft="true"
            />

        <View
            android:id="@+id/BuildingInfoFrag_view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/BuildingInfoFrag_shimtv_numberOfUnit"
            android:background="#bdbdbd"
            android:layout_marginTop="15dp"
            >
        </View>

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/BuildingInfoFrag_shimtv_Plaque"
            android:text="پلاک"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            app:reflectionColor="#ff006f"
            android:layout_below="@id/BuildingInfoFrag_view4"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/BuildingInfoFrag_shimtv_Text_shimtv_Plaque"
            android:hint="---"
            android:inputType="number"
            app:met_floatingLabel="none"
            android:gravity="left"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_hideUnderline="true"
            app:met_underlineColor="#ddffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:maxLength="4"
            android:layout_below="@+id/BuildingInfoFrag_view4"
            android:layout_alignParentLeft="true"
            />

        <View
            android:id="@+id/BuildingInfoFrag_view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/BuildingInfoFrag_shimtv_Plaque"
            android:background="#bdbdbd"
            android:layout_marginTop="15dp"
            >
        </View>

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/BuildingInfoFrag_shimtv_Adrress"
            android:text="آدرس"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            app:reflectionColor="#db0007"
            android:layout_below="@id/BuildingInfoFrag_view5"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/BuildingInfoFrag_shimtv_Text_Adrress"
            android:hint="---"
            android:inputType="text"
            app:met_floatingLabel="none"
            android:gravity="left"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#391e8c"
            app:met_errorColor="#00c7dd"
            app:met_hideUnderline="true"
            app:met_underlineColor="#ddffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/BuildingInfoFrag_view5"
            android:layout_alignParentLeft="true"
            />

        <com.andexert.library.RippleView
            android:id="@+id/buildinginformation_ripple_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/BuildingInfoFrag_shimtv_Adrress"
            android:layout_marginTop="50dp"
            app:rv_rippleDuration="200"
            rv_centered="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buildinginformation_btn_edit"
                android:background="#1E88E5"
                android:text="ثبت"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:elevation="6dp"
                />

        </com.andexert.library.RippleView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

